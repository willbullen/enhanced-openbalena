# Enhanced OpenBalena Configuration

# Django Settings
SECRET_KEY=your-very-secret-key-here-change-this-in-production
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/enhanced_openbalena
POSTGRES_DB=enhanced_openbalena
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# OpenBalena Configuration
OPENBALENA_API_URL=http://api:1337
OPENBALENA_REGISTRY_URL=http://registry:2375
OPENBALENA_VPN_URL=http://vpn:443
OPENBALENA_S3_URL=http://s3:9000

# Domain Configuration
DOMAIN=openbalena.local
API_DOMAIN=api.openbalena.local
REGISTRY_DOMAIN=registry.openbalena.local
VPN_DOMAIN=vpn.openbalena.local
S3_DOMAIN=s3.openbalena.local
WEB_DOMAIN=admin.openbalena.local

# SSL/TLS Configuration
SSL_ENABLED=false
CERT_PATH=/certs
LETSENCRYPT_EMAIL=admin@example.com

# Authentication
JWT_SECRET=your-jwt-secret-here
SESSION_COOKIE_AGE=86400

# Logging
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# Feature Flags
ENABLE_DELTA_UPDATES=true
ENABLE_MULTI_USER=true
ENABLE_REMOTE_ACCESS=true
ENABLE_DIAGNOSTICS=true

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Storage Configuration
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles
STATIC_URL=/static/

# Security Settings
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=0
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
X_FRAME_OPTIONS=DENY
